doctype html

mixin fa(type, text)
    span(class='fa fa-'+type)
    = text

mixin faButtonDefault(faType, href, text)
    a.btn.btn-default(href=href)
        +fa(faType, text)

mixin faButtonPrimary(faType, href, text)
    a.btn.btn-primary(href=href)
        +fa(faType, text)

mixin buttonPrimary(href, text)
    a.btn.btn-primary(href=href)= text

mixin inputRequired(type, id, text)
    .form-group
        label= text
        input.form-control(type=type, name=id, id=id, required)

mixin input(type, id, text)
    .form-group
        label= text
        input.form-control(type=type, name=id, id=id)


